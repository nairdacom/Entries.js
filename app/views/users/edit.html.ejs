<div class="jumbotron">
    <h3>Konta</h3>
    <p>Zarządzaj kontami użytkowników.</p>
</div>
<div class="hero-unit">
  <form id="user-form" class="form-horizontal" action="/users/<%= params.id %>?_method=PUT" method="POST">
    <fieldset>
      <legend>Edytowanie danych</legend>
      <% if(params.errors) { %>
      <div class="control-group">
        <ul>
        <% for(var err in params.errors) { %>
          <li><%= params.errors[err]; %></li>
        <% } %>
        </ul>
      </div>
      <% } %>

      <%- partial('form', {user: user, currentUser:currentUser}) %>

      <div class="form-actions">
        <%- contentTag('input', 'Zapisz', {type: 'submit', class: 'btn btn-primary'}) %>
        <% if(currentUser.isAdmin) { %>
          <%- contentTag('button', 'Usuń', {type: 'submit', formaction: '/users/' + params.id + '?_method=DELETE', formmethod: 'POST', class: 'btn btn-danger'}) %>
        <% } %>
      </div>
    </fieldset>
  </form>
</div>
