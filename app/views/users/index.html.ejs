<div class="jumbotron">
    <h3>Konta</h3>
    <p>Zarządzaj kontami użytkowników.</p>
</div>

  <%- linkTo('Utwórz nowego użytkownika', addUserPath, {class: 'btn pull-right btn-primary btn-lg'}); %>


<table class="table table-striped table-hover" style="width: 60%;">
<% if (users) { %>
  <tr>
    <th>Imię i nazwisko (klub)</th>
    <th>Nazwa użytkownika</th>
    <th>Dostęp administracyjny</th>
    <th>Blokada zgłoszeń</th>
  </tr>
<% for (var i = 0, ii = users.length; i < ii; i++) { %>
  <tr  id="user-<%= users[i].id; %>">
    <td><%- linkTo(users[i].familyName + " " + users[i].givenName, userPath(users[i].id)); %></td>
    <td><%= users[i].username; %></td>
    <td><% if(users[i].isAdmin){ %> <span class="glyphicon glyphicon-ok"></span> <% } else { %> <span class="glyphicon glyphicon-remove"></span> <% } %></td>
    <td><% if(users[i].isLockedOut){ %> <span class="glyphicon glyphicon-lock"></span> <% } else { %> <span class="glyphicon glyphicon-globe"></span> <% } %> <a href="/users/<%= users[i].id %>/lockChange" class="btn btn-xs btn-danger">zmień</a></td>
  </tr>
<% } %>
<% } %>
</table>