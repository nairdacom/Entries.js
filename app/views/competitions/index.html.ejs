<div class="jumbotron">
    <h3>Konkurencje</h3>
    <p>Zarządzaj słownikiem konkurencji zdefiniowanym w systemie.</p>
</div>
<%- linkTo('Dodaj nową konkurencję', addCompetitionPath, {class: 'btn btn-lg btn-primary pull-right'}); %>

<table class="table table-striped table-hover" style="width: 60%;">
  <tr>
    <th>Nazwa</th>  
    <th>Opis</th>
    <th>No.</th>
  </tr>
<% if (competitions) { %>
<% for (var i = 0, ii = competitions.length; i < ii; i++) { %>
  <tr id="competition-<%= competitions[i].id; %>">
    <td><%- linkTo(competitions[i].name, competitionPath(competitions[i].id)); %></td>
    <td><%- competitions[i].description %></td>
    <td><%- competitions[i].slot %></td>
  </tr>
<% } %>
<% } %>
</table>